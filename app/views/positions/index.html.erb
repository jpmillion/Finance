<h3>Positions</h3>

<% @positions.each do |position| %>

    <% if position.type == 'Cash' %>
        <h4>Cash</h4>
        <%= link_to position.type, cash_path(position) %> <br>
        <%= number_to_currency(position.value) %> - 
        <%= link_to 'make a cash deposit/withdrawl', edit_cash_path(position) %> <br>
        <h4>Equities</h4>
    <% else %>
        <%= link_to position.symbol, equity_path(position) if position.type == 'Equity' %> <br>
        <%= position.shares %> <br>
        <%= number_to_currency(position.value) %> <br>
        <%= button_to 'Close Position', equity_path(position), method: :delete %> <br>
    <% end %>
    

<% end %> <br><br><br>

<%= link_to 'back to account home', user_account_path(params[:user_account_id]) %> 
<%= link_to 'create new equity position', new_user_account_equity_path(params[:user_account_id]) %> <br>
<%= link_to 'Home', customer_path(current_user) %>