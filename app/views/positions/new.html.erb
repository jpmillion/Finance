<% if @equity.errors.any? %>
    <%= tag.div id: "error_explanation" do %>
            <% @equity.errors.full_messages.each do |message| %>
                <%= tag.li message %>
            <% end %>
        <% end %>
<% end %>

<h1>new position</h1>

<%= form_with model: [@user_account, @equity] do |f| %>

    <%= f.hidden_field :type, value: 'Equity' %>
    <%= f.label :symbol %>
    <%= f.text_field :symbol %> <br>
    <%= f.label :shares %>
    <%= f.number_field :shares, value: 0, min: 0, step: 1 %> <br>
    <%= f.submit %> <br>
    

<% end %>
<br>

<%= link_to 'Back to Account', user_account_path(@user_account) %>