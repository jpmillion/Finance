<!DOCTYPE html>
<html>
  <head>
    <title>Finance</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


  </head>

  <body>
    <header>
      <%= button_to 'Log in with Github', '/auth/github', method: :post unless session[:user_id] %>
      <%= link_to('Log In', login_path) unless session[:user_id] %>
      <%= link_to('Sign Up', new_user_path) unless session[:user_id] %>
    </header>
     <% flash.each do |name, msg| %>
       <%= content_tag :div, msg, class: name %>
     <% end %>

    <%= yield %>

    <br> <%= button_to('Log Out', session_path(current_user), method: :delete) if session[:user_id] %> 
  </body>
</html>
